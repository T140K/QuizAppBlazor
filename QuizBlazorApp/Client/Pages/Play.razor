@page "/play"
@inject NavigationManager _navigationManager

<h3>Play quiz by searching for the quiz title</h3>

<form onsubmit="@HandleSubmit">
    <input @bind="QuizName" placeholder="Quiz name here" />
    <button type="submit">Play Qúiz</button>
</form>


@code {
    private string QuizName;

    private void HandleSubmit()
    {
        if (!string.IsNullOrEmpty(QuizName))
        {
            _navigationManager.NavigateTo($"/playquiz/{QuizName}");
        }
    }
}
